<% content_for :page_classes do 'devise form registrations registrations-new' end %>

<%= render "devise/shared/links" %>

<%= render "devise/shared/error_messages", resource: resource %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="heading">Sign up</h2>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %>
    <div class="field-with-constraints">
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      <div class="reg-constraint">
        <div class="focus-box">
          Username only allows the following characters:
          <ul>
            <li>Uppercase and lowercase letters</li>
            <li>Digits</li>
            <li>Select punctuation: “.?!”</li>
            <li>Select symbols: “_#$*”</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <div class="field-with-constraints">
      <%= f.password_field :password, autocomplete: "new-password" %>
      <div class="reg-constraint">
        <div class="focus-box">
          Password must conform to the following requirements:
          <ul>
            <% if @minimum_password_length %>
              <li><%= @minimum_password_length %> characters minimum</li>
            <% end %>
            <li>
              Must contain at least 1 of each:
                <ul>
                  <li>Uppercase letter</li>
                  <li>Lowercase letter</li>
                  <li>Digit</li>
                  <li>Symbol</li>
                </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="about-links">
    <%= link_to 'Privacy Policy', '/privacy-policy', target: :_blank %>
    <%= link_to 'Terms of Service', '/terms-of-service', target: :_blank %>
  </div>

  <%= f.fields_for :profile do |profile_form| %>
    <h3 class="heading">Your Profile Info</h3>
    <div class="field">
      <%= profile_form.label :first_name %>
      <%= profile_form.text_field :first_name %>
    </div>
    <div class="field">
      <%= profile_form.label :middle_name %>
      <%= profile_form.text_field :middle_name %>
    </div>
    <div class="field">
      <%= profile_form.label :last_name %>
      <%= profile_form.text_field :last_name %>
    </div>
    <div class="field">
      <%= profile_form.label :birthdate %>
      <%= profile_form.date_field :birthdate %>
      <div class="selection">
        <%= profile_form.check_box :birthdate_public, checked: true %>
        <%= profile_form.label :birthdate_public, 'Show Birthday on Profile' %>
      </div>
    </div>
    <div class="field">
      <%= profile_form.label :location %>
      <%= profile_form.text_field :location %>
      <div class="selection">
        <%= profile_form.check_box :location_public, checked: true %>
        <%= profile_form.label :location_public, 'Show Location on Profile' %>
      </div>
    </div>
  <% end %>

  <div class="actions submit">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
