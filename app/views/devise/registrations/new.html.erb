<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>Your Profile Info:</div>
  <%= f.fields_for :profile do |profile_form| %>
    <div class="field">
      <%= profile_form.label :first_name %>
      <%= profile_form.text_field :first_name %>
    </div>

    <div class="field">
      <%= profile_form.label :middle_name %>
      <%= profile_form.text_field :middle_name %>
    </div>

    <div class="field">
      <%= profile_form.label :last_name %>
      <%= profile_form.text_field :last_name %>
    </div>

    <div class="field">
      <%= profile_form.label :birthdate %>
      <%= profile_form.date_field :birthdate %>
      <%= profile_form.check_box :birthdate_public, checked: true %>
      <%= profile_form.label :birthdate_public, 'Show Birthday on Profile' %>
    </div>

    <div class="field">
      <%= profile_form.label :location %>
      <%= profile_form.text_field :location %>
      <%= profile_form.check_box :location_public, checked: true %>
      <%= profile_form.label :location_public, 'Show Location on Profile' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
