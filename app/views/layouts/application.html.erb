<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= link_to 'Home', '/' %>
      <% if user_signed_in? %>
        <div>Currently signed in as: <%= link_to current_user.profile.first_name, current_user_path, class: "important-link" %></div>
        <div class="user-links">
          <div class="user-link"><%= notifications_link %></div>
          <%= turbo_frame_tag 'notifications', target: '_top' %>
          <div class="user-link"><%= link_to 'My Friends', friends_path %></div>
          <div class="user-link"><%= friend_request_link %></div>
          <div class="user-link"><%= link_to 'Find Friends', strangers_path %></div>
          <div class="user-link"><%= link_to 'Edit Profile', edit_profile_path %></div>
          <% if current_user.native_login? %>
            <div class="user-link"><%= link_to 'Edit Account', edit_user_registration_path %></div>
          <% end %>
          <div class="user-link"><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %></div>
        </div>
      <% end %>
    </header>
    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |name, message| %>
          <p class="<%= name %>"><%= message %></p>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
