<%= simple_form_for post, 
                    format: response_format, 
                    data: { controller: 'form image-files', 
                            action: 'turbo:submit-end->form#reset 
                                     image-files:input->form#setSubmit 
                                     form:reset->image-files#clearPreview',
                            image_files_file_field_ind_value: 0 } do |form| %>
  <%= hidden_field_tag 'response_format', response_format %>
  <%= form.input :body, 
                 label: false, 
                 placeholder: "What's on your mind, #{profile.first_name}?",
                 input_html: { data: { form_target: 'input', action: 'form#setSubmit' } } %>
  <div class="field">
    <div class="photos">
      <%= form.simple_fields_for :photos do |photo_form| %>
        <div id="image-<%= photo_form.object.id %>">
          <%= render photo_form.object, link_path: false, height: '150' %>
          <a href="" data-action='image-files#removeDatabaseImage'>Remove</a>
        </div>
        <%= photo_form.input :_destroy, 
                             as: :hidden, 
                             input_html: { id: "destroy-#{photo_form.object.id}",
                                           value: '',
                                           data: { form_target: 'input' } } %>
      <% end %>
      <span class="preview" data-image-files-target="preview"></span>
    </div>
    <div class="photo-upload">
      <%= form.label :raw_photos, 'Upload Photos' %>
      <%= form.file_field :raw_photos, multiple: true, id: 'filefield-0',
                          data: { form_target: 'input', 
                                  action: 'image-files#updateFileDisplay form#setSubmit' } %>
    </div>
    <% post.photos.each.with_index(1) do |photo, i| %> 
      <% photo.errors[:stored].each do |message| %>
        <p class="error">Photo #<%= i %> <%= message %></p>
      <% end %>
    <% end %>
  </div>
  <%= form.submit 'Post', disabled: true, data: { form_target: 'submit' } %>
<% end %>
