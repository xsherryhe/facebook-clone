<% if @error %>
  <%= turbo_stream.update "#{@reactable_singular}-#{@reactable_id}" do %>
    <%= render 'shared/error', error: @error %>
  <% end %>
<% else %>
  <%= turbo_stream.update "#{@reactable_singular}-#{@reactable_id}-likes" do %>
    <%= render 'likes', likes: @reactable.likes %>
  <% end %>

  <% if @reactable %>
    <%= turbo_stream.update "#{@reactable_singular}-#{@reactable_id}-likes-link" do %>
      <%= link_to 'Like', "/#{@reactable_type.pluralize}/#{@reactable_id}/likes", data: { turbo_method: :post } %>
    <% end %>
  <% end %>
<% end %>
